# Configuration de la base de données
DB_HOST=db
DB_USER=listiq_user
DB_PASSWORD=listiq_password
DB_NAME=listiq_db
DB_PORT=3306

# Configuration de l'utilisateur admin
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin

# Configuration de l'application
SERVER_NAME=listiq.domaine.local
FLASK_APP=app.py
FLASK_ENV=production

# Configuration des ports
NGINX_PORT=80
NGINX_SSL_PORT=443
WEB_PORT=5000

# Variables pour les scripts de migration
MYSQL_HOST=${DB_HOST}
MYSQL_USER=${DB_USER}
MYSQL_PASSWORD=${DB_PASSWORD}
MYSQL_DATABASE=${DB_NAME}
MYSQL_PORT=${DB_PORT}

# URL complète de la base de données pour SQLAlchemy
DATABASE_URL=mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Configuration du serveur web

# Variables de contrôle d'installation et de mise à jour
NEW_INSTALL=false
RESET_ADMIN=false
UPDATE=false
WEB_PORT=5000

# Configuration de Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# Configuration du proxy
# Configuration du proxy d'entreprise
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1,db,web,nginx,.local,listiq.domaine.local
http_proxy=
https_proxy=
no_proxy=localhost,127.0.0.1,db,web,nginx,.local,listiq.domaine.local

# Configuration de la vérification SSL
VERIFY_SSL=false

# Logs
LOG_LEVEL=info
# Configuration de la langue
DEFAULT_LANGUAGE=en
